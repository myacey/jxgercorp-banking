{
    "artificialDelayMilliseconds": 700,
    "keepExistingTerminalsOpen": false,
    "runOnStartup": false,
    "terminals": [
      {
        "splitTerminals": [
          {
            "name": "docker",
            "commands": [
              "docker compose up"
            ]
          },
          {
            "name": "front",
            "commands": [
                "cd front",
                "npm run serve"
            ]
          }
        ]
      },
      {
        "splitTerminals": [
          {
            "name": "api-gateway",
            "commands": ["go run services/api-gateway/cmd/main.go"]
          },
          {
            "name": "user",
            "commands": ["go run services/user/cmd/main.go"]
          },
          {
            "name": "transaction", 
            "commands": ["go run services/transaction/cmd/main.go"]
          },
          {
            "name": "token",
            "commands": ["go run services/token/cmd/main.go"]
          },
          {
            "name": "notification",
            "commands": ["go run services/notification/cmd/main.go"]
          }
        ]
      }
    ]
  }